//determinar de mayor a menor 3 numero distintos.
#include <stdio.h>
#include <math.h>
int main (){
	int a,b,c;
	printf ("Intriduce un valor para a:\n");
	scanf ("%i",&a);
	printf ("Intriduce un valor para b:\n");
	scanf ("%i",&b);
	printf ("Intriduce un valor para c:\n");
	scanf ("%i",&c);
	if (a>b&&b>c){
		printf ("El numero mayor es:%i\n",a);
		printf ("El numero que sigue es:%i\n",b);
		printf ("El numero menor es:%i\n",c);
	}
	if (b>a&&a>c){
		printf ("El numero mayor es:%i\n",b);
		printf ("El numero que sigue es:%i\n",a);
		printf ("El numero menor es:%i\n",c);
	}
	if (c>b&&b>a){
		printf ("El numero mayor es:%i\n",c);
		printf ("El numero que sigue es:%i\n",b);
		printf ("El numero menor es:%i\n",a);
	}
	if (a>c&&c>b){
		printf ("El numero mayor es:%i\n",a);
		printf ("El numero que sigue es:%i\n",c);
		printf ("El numero menor es:%i\n",b);
	}
	if (b>c&&c>a){
		printf ("El numero mayor es:%i\n",b);
		printf ("El numero que sigue es:%i\n",c);
		printf ("El numero menor es:%i\n",a);
	}
	if (c>a&&a>b){
		printf ("El numero mayor es:%i\n",c);
		printf ("El numero que sigue es:%i\n",a);
		printf ("El numero menor es:%i\n",b);
	}
	if (c==a&&a==b){
		printf ("Todos los numeros son iguales\n",c);	
		}
	system ("pause");
	return 0;
}
